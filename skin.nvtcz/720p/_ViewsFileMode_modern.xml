<?xml version="1.0" encoding="UTF-8"?>
<includes>
	
	
	
	
	
	<include name="ModernView">
		<control type="group">
			<visible>Control.IsVisible(901)</visible>
			<include>VisibleFadeEffect</include>
			<control type="fixedlist" id="901">
				<left>0</left><!-- BEFORE SCROLLBAR WAS ADDED - left=16 -->
				<top>120</top>
				<width>1280</width>
				<height>324</height>
				<onleft>901</onleft>
				<onright>901</onright>
				<onup>2</onup>
				<ondown>921</ondown>
				<viewtype label="Modern">list</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime easing="inout" tween="sine">400</scrolltime>
				<focusposition>1</focusposition>
				<preloaditems>4</preloaditems>
				<orientation>horizontal</orientation>
				<itemlayout width="212" height="324"><!-- 226 - 14 -->
					<control type="group">
						<animation center="106,162" condition="true" effect="zoom" end="85" start="85">Conditional</animation>
						<!-- new: border texture only -->
						<!--
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>226</width>
							<height>324</height>
							<bordertexture border="7">button-nofocus.png</bordertexture>
							<bordersize>7</bordersize>
							<texture background="true">_added_img/posterwall_100x100_clear.png</texture>
							<aspectratio align="center" aligny="center">scale</aspectratio>
						</control>
						-->
						<!-- poster image option a: scaled (if poster IS available) -->
						<control type="image">
							<left>7</left>
							<top>7</top>
							<width>212</width>
							<height>310</height>
							<texture background="true">$VAR[PosterThumb]</texture>
							<aspectratio>scale</aspectratio>
							<visible>!IsEmpty(ListItem.Art(poster))</visible>
						</control>
						<!-- poster image option b: keep (if poster is NOT available) -->
						<control type="image">
							<left>7</left>
							<top>7</top>
							<width>212</width>
							<height>310</height>
							<texture background="true">$VAR[PosterThumb]</texture>
							<aspectratio>keep</aspectratio>
							<visible>IsEmpty(ListItem.Art(poster))</visible>
						</control>
						<!--
						<control type="image">
							<left>10</left>
							<top>288</top>
							<width>40</width>
							<height>26</height>
							<texture>flagging/video/Set.png</texture>
							<aspectratio align="left">keep</aspectratio>
							<visible>ListItem.IsCollection</visible>
						</control>
						-->
						<control type="image">
							<left>7</left>
							<top>7</top>
							<width>212</width>
							<height>310</height>
							<texture background="true">_added_img/posterwall_100x100_darken.png</texture>
							<aspectratio>scale</aspectratio>
						</control>
						<!-- overlay (watched etc.) -->
						<!--
						<control type="image">
							<left>151</left>
							<top>226</top>
							<width>21</width>
							<height>21</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Overlay]</texture>
						</control>
						-->
					</control>
				</itemlayout>
				<focusedlayout width="212" height="324"><!-- 226 - 14 -->
					<control type="group">
						<animation center="106,162" condition="Container(901).OnNext | Container(901).OnPrevious" easing="inout" effect="zoom" end="100" start="85" time="1000" tween="sine">Focus</animation>
						<animation center="106,162" condition="Container(901).OnNext | Container(901).OnPrevious" easing="inout" effect="zoom" end="85" start="100" time="1000" tween="sine">UnFocus</animation>
						<animation center="106,162" condition="Control.HasFocus(4000)" easing="inout" effect="zoom" end="85" start="100" time="1000" tween="sine">Conditional</animation>
						
						<control type="group">
							<animation condition="Container(901).OnNext | Container(901).OnPrevious" easing="inout" effect="fade" end="100" start="0" time="1000" tween="sine">Focus</animation>
							<animation condition="Container(901).OnNext | Container(901).OnPrevious" easing="inout" effect="fade" end="0" start="100" time="1000" tween="sine">UnFocus</animation>
							<!-- new: border texture only -->
							<control type="image">
								<left>0</left>
								<top>0</top>
								<width>226</width>
								<height>324</height>
								<bordertexture border="7">_added_img/posterwall_100x100_blue_border_7px.png</bordertexture>
								<bordersize>7</bordersize>
								<texture background="true">_added_img/posterwall_100x100_clear.png</texture>
								<aspectratio align="center" aligny="center">scale</aspectratio>
							</control>
						</control>
						
						<!-- poster image option a: scaled (if poster IS available) -->
						<control type="image">
							<left>7</left>
							<top>7</top>
							<width>212</width>
							<height>310</height>
							<texture background="true">$VAR[PosterThumb]</texture>
							<aspectratio>scale</aspectratio>
							<visible>!IsEmpty(ListItem.Art(poster))</visible>
						</control>
						<!-- poster image option b: keep (if poster is NOT available) -->
						<control type="image">
							<left>7</left>
							<top>7</top>
							<width>212</width>
							<height>310</height>
							<texture background="true">$VAR[PosterThumb]</texture>
							<aspectratio>keep</aspectratio>
							<visible>IsEmpty(ListItem.Art(poster))</visible>
						</control>
						<!-- overlay (watched etc.) -->
						<!--
						<control type="image">
							<left>151</left>
							<top>226</top>
							<width>21</width>
							<height>21</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Overlay]</texture>
						</control>
						-->
						<!--
						<control type="image">
							<left>10</left>
							<top>288</top>
							<width>40</width>
							<height>26</height>
							<texture>flagging/video/Set.png</texture>
							<aspectratio align="left">keep</aspectratio>
							<visible>ListItem.IsCollection</visible>
						</control>
						-->
					</control>
					<control type="group">
						<!--<animation condition="true" effect="fade" start="100" end="0" time="0">Conditional</animation>-->
						<animation easing="inout" effect="fade" start="100" end="0" time="1000" tween="sine">Focus</animation>
						<animation condition="Container(901).OnNext | Container(901).OnPrevious" easing="inout" effect="fade" start="0" end="100" time="1000" tween="sine">UnFocus</animation>
						<control type="image">
							<left>7</left>
							<top>7</top>
							<width>212</width>
							<height>310</height>
							<texture background="true">_added_img/posterwall_100x100_darken.png</texture>
							<aspectratio>scale</aspectratio>
							<!--<visible>Control.HasFocus(901)</visible>-->
						</control>
					</control>
				</focusedlayout>
			</control>
			
			<control type="label">
				<description>header label</description>
				<left>210</left>
				<top>50</top>
				<width>756</width>
				<height>38</height>
				<font>font30_title</font>
				<label>$INFO[Container.CurrentItem] | $INFO[Container.NumItems]   $INFO[Container.SortMethod]  $INFO[Container.SortOrder]</label>
				<align>left</align>
				<textcolor>white</textcolor>
				<scroll>true</scroll>
				<visible>IntegerGreaterThan(Container.NumItems,0)</visible>
			</control>
			
			<control type="group">
				<left>210</left>
				<top>460</top>
				
				<!-- title -->
				<control type="label">
					<description>header label</description>
					<left>0</left>
					<top>0</top>
					<width>1000</width>
					<height>38</height>
					<font>font30_title</font>
					<label>$INFO[ListItem.Title] | $INFO[ListItem.Year]</label>
					<align>left</align>
					<textcolor>white</textcolor>
					<scroll>true</scroll>
					<visible>!IsEmpty(ListItem.Title)</visible>
				</control>
				
				<!-- filename if no library item -->
				<control type="label">
					<description>header label</description>
					<left>0</left>
					<top>0</top>
					<width>1000</width>
					<height>38</height>
					<font>font30_title</font>
					<label>$INFO[ListItem.Label]</label>
					<align>left</align>
					<textcolor>white</textcolor>
					<scroll>true</scroll>
					<visible>IsEmpty(ListItem.Title)</visible>
				</control>
				
				<!-- short plot -->
				<control type="textbox" id="400">
					<description>Description Value for Movies</description>
					<left>0</left>
					<top>40</top>
					<width>680</width>
					<height>74</height>
					<font>font13</font>
					<align>left</align>
					<textcolor>white</textcolor>
					<pagecontrol>61</pagecontrol>
					<label>$INFO[ListItem.TagLine,,[CR]]$INFO[ListItem.Plot]</label>
					<autoscroll>false</autoscroll>
				</control>
				
				
				<control type="grouplist" id="902">
					<left>0</left>
					<top>130</top>
					<width>800</width>
					<height>50</height>
					<itemgap>2</itemgap>
					<align>left</align>
					<orientation>horizontal</orientation>
					<onleft>902</onleft>
					<onright>902</onright>
					<onup>901</onup>
					<control type="button" id="921">
						<description>Play</description>
						<width>200</width>
						<include>ButtonInfoDialogsCommonValues</include>
						<label>Play</label>
						<alttexturefocus border="2">button-focus.png</alttexturefocus>
						<alttexturenofocus border="2">button-nofocus.png</alttexturenofocus>
						<onclick>SetFocus(901)</onclick>
						<onclick>Play</onclick>
						<visible>!ListItem.IsCollection + !ListItem.IsFolder</visible>
					</control>
					<control type="button" id="922">
						<description>More Information</description>
						<width>200</width>
						<include>ButtonInfoDialogsCommonValues</include>
						<label>More Information</label>
						<alttexturefocus border="2">button-focus.png</alttexturefocus>
						<alttexturenofocus border="2">button-nofocus.png</alttexturenofocus>
						<onclick>SetFocus(901)</onclick>
						<onclick>Info</onclick>
						<visible>!ListItem.IsCollection + !ListItem.IsFolder</visible>
					</control>
					<control type="button" id="923">
						<description>Browse to Multiple Items</description>
						<width>200</width>
						<include>ButtonInfoDialogsCommonValues</include>
						<label>Open Movie Set</label>
						<alttexturefocus border="2">button-focus.png</alttexturefocus>
						<alttexturenofocus border="2">button-nofocus.png</alttexturenofocus>
						<onclick>SetFocus(901)</onclick>
						<onclick>Select</onclick>
						<visible>ListItem.IsCollection</visible>
					</control>
				</control>
			</control>
					
					

		</control>
	</include>
	
	
	

	
	
	
	
	
	
</includes>
